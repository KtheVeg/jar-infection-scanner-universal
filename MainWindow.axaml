<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="jarinfectionscanneruniversal.MainWindow"
        Title="Universal Jar Scanner"
        Width="800" Height="600">

  <StackPanel Width="800" Height="600">
    <StackPanel Orientation="Horizontal" Width="800" Height="30">
      <TextBox Watermark="Path to File/Folder" Width="600" Height="30" x:Name="pathInput" /><Button Content="Browse" Width="100" Height="30" Click="BrowseFilesClick"/><Button Content="Scan" Width="100" Height="30" Click="ScanClick"/>
      
    </StackPanel>
    <Border BorderBrush="#888888" BorderThickness="1" Width="790" Height="550" Margin="5">
      <ScrollViewer Width="780" Height="540" x:Name="outputScroll">
        <TextBlock Text="Select a path and click 'Scan' to get started" Width="780" TextWrapping="Wrap" x:Name="output" FontFamily="monospace" />
      </ScrollViewer>
    </Border>
  </StackPanel>
</Window>